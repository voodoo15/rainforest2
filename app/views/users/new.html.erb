<h1>Sign Up</h1>

<%= form_for @user do | f | %>
  <% if @user.errors.any? %>
  <h4>Form is invalid</h4>
  <ul>
      <% @user.errors.full_messages.each do | msg | %>
      <li>
          <%= msg %>
      </li>
      <% end %>
  </ul>
  <% end %>

  <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :name %>
    <% f.text_field :name %>
  </p>
  <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
  </p>
  <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>
